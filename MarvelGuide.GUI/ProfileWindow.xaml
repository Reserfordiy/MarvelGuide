                                            </Grid>

                                            <Button Name="DeleteButton" Margin="5 -5 0 0" Grid.Column="1" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" Height="Auto" Width="Auto" Click="SpecialsDeleteButton_Click" Style="{DynamicResource SmallDeleteButtonStyle}">
                                                <Image Source="Images/delete_icon.png" Height="18" Width="18"></Image>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Name="AddSpecialProjectButton" Grid.Row="4" HorizontalAlignment="Left" Padding="5.5 4.5" FontSize="13" Margin="11.5 8 150 13" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="AddSpecialProjectButton_Click">Добавить спецпроект</Button>

                        </Grid>

                        <Grid Name="AgentsRoleGrid" Grid.Row="29" Initialized="AgentsRoleGrid_Initialized">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" TextWrapping="Wrap" FontSize="19.5" FontFamily="Calibri" Margin="10.5 18 0 3.5">Должность агента поддержки:</TextBlock>

                            <TextBlock Grid.Row="1" FontSize="14" Margin="11.5 5 0 5">Номер агента:</TextBlock>
                            <TextBox Name="AgentsNumberTextBox" Grid.Row="2" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 3.5" Foreground="Gray" GotFocus="AgentsNumberTextBox_GotFocus" LostFocus="AgentsNumberTextBox_LostFocus">Пример: 14</TextBox>

                            <TextBlock Grid.Row="3" FontSize="14" Margin="11.5 5 0 5" TextWrapping="Wrap" >Приветствие агента:</TextBlock>
                            <TextBox Name="AgentsFirstWordsTextBox" Grid.Row="4" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 3.5" Foreground="Gray" GotFocus="AgentsFirstWordsTextBox_GotFocus" LostFocus="AgentsFirstWordsTextBox_LostFocus">Пример: Здравствуйте!</TextBox>

                            <TextBlock Grid.Row="5" FontSize="14" Margin="11.5 5 0 5" TextWrapping="Wrap" >Подпись агента:</TextBlock>
                            <TextBox Name="AgentsLastWordsTextBox" Grid.Row="6" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 11" Foreground="Gray" GotFocus="AgentsLastWordsTextBox_GotFocus" LostFocus="AgentsLastWordsTextBox_LostFocus">Пример: С любовью</TextBox>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" FontSize="14" Margin="5.8 1.55 0 5" TextWrapping="Wrap">Название спецпроекта:</TextBlock>

                                            <Grid Margin="4.3 0 143 3.5" Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>

                                                <ComboBox Name="SpecialsProjectComboBox" FontSize="16" FontFamily="Calibri" Padding="4 2" Margin="0 0 0 2.15" DisplayMemberPath="Name" Initialized="SpecialsProjectComboBox_Initialized" DropDownOpened="SpecialsProjectComboBox_DropDownOpened" DropDownClosed="SpecialsProjectComboBox_DropDownClosed" SelectionChanged="SpecialsProjectComboBox_SelectionChanged"></ComboBox>

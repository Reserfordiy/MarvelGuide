                                                <Image Source="Images/delete_icon.png" Height="18" Width="18"></Image>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Name="AddRubricButton" Grid.Row="2" HorizontalAlignment="Left" Padding="5.5 4.5" FontSize="13" Margin="11.5 8 150 13" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="AddRubricButton_Click">Добавить рубрику</Button>

<Window x:Class="MarvelGuide.GUI.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarvelGuide.GUI"
        mc:Ignorable="d"
        Title="Management System" Height="2580" MinHeight="470" Width="870" MinWidth="710" MaxWidth="1050" FontFamily="Verdana" Closing="Window_Closing" KeyDown="Window_KeyDown" StateChanged="Window_StateChanged" SizeChanged="Window_SizeChanged">
    <ScrollViewer Name="Scroll">
        <Grid Background="#FFEAF6FB">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Name="ProfileTitleTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Calibri" FontSize="27" Margin="0 20 0 5" Initialized="ProfileTitleTextBlock_Initialized">Личный кабинет</TextBlock>

            <Button Name="ExitProfileButton" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="9 5" FontSize="14.5" Margin="0 20 30 0" Click="ExitProfileButton_Click" Style="{DynamicResource AttentionButtonsStyle}" Initialized="ExitProfileButton_Initialized">Выйти</Button>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="80 50 40 15" Width="200" Height="200" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                        <Border BorderThickness="1.2" BorderBrush="#FF715C4E">
                            <Image Name="AvatarImage" Stretch="UniformToFill" Source="Images/пейзаж1.jpg" Initialized="AvatarImage_Initialized"></Image>
                        </Border>
                    </DockPanel>

                    <Grid Width="200" HorizontalAlignment="Center" Margin="60 0 20 0" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Button Name="UploadAvatarButton" Grid.Row="0" HorizontalAlignment="Center" Padding="6 4" FontSize="14.5" Margin="0 6.5 0 0" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="UploadAvatarButton_Click" Initialized="UploadAvatarButton_Initialized">Загрузить изображение</Button>

                        <Button Name="ShowTheTeamButton" Grid.Row="1" Width="187" HorizontalAlignment="Center" Padding="8.5 6.5" FontSize="15.5" Margin="0 12 0 3" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="ShowTheTeamButton_Click" Initialized="ShowTheTeamButton_Initialized">Посмотреть команду</Button>
                        <Button Name="UserDetailsButton" Grid.Row="2" Width="187" HorizontalAlignment="Center" Padding="8.5 6.5" FontSize="15.5" Margin="0 12 0 3" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="UserDetailsButton_Click" Initialized="UserDetailsButton_Initialized">Личный кабинет</Button>
                        <Button Name="DeveloperModeButton" Grid.Row="3" Width="187" HorizontalAlignment="Center" Padding="8.5 6.5" FontSize="15.5" Margin="0 12 0 3" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="DeveloperModeButton_Click" Initialized="DeveloperModeButton_Initialized">Ред. сотрудников</Button>
                        <Button Name="EditDocumentsButton" Grid.Row="4" Width="187" HorizontalAlignment="Center" Padding="8.5 6.5" FontSize="15.5" Margin="0 12 0 3" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="EditDocumentsButton_Click" Initialized="EditDocumentsButton_Initialized">Ред. документы</Button>
                        <Button Name="EditRubricsButton" Grid.Row="5" Width="187" HorizontalAlignment="Center" Padding="8.5 6.5" FontSize="15.5" Margin="0 12 0 0" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="EditRubricsButton_Click" Initialized="EditRubricsButton_Initialized">Ред. рубрики</Button>

                        <Grid Grid.Row="6" Margin="3.8 0 0 0">
                            <Grid Name="DeveloperModePropertiesGrid"  Margin="-23 40 -40 0" Initialized="DeveloperModePropertiesGrid_Initialized">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" HorizontalAlignment="Left" FontSize="19.5" Margin="0 0 0 14.5" FontFamily="Calibri" TextWrapping="Wrap">Настройте права разработчика для сотрудника:</TextBlock>

                                <CheckBox Grid.Row="1" Name="IsDeveloperCheckBox" FontSize="14" Margin="4.5 0 0 10" Checked="IsDeveloperCheckBox_Checked" Unchecked="IsDeveloperCheckBox_Unchecked">
                                    <TextBlock TextWrapping="Wrap">Является разработчиком</TextBlock>
                                </CheckBox>                                
                           </Grid>                            
                        </Grid>

                        <Grid Grid.Row="7" Margin="3.8 0 0 0">
                            <Grid Name="DevelopersLevelGrid" Margin="-23 0 -40 0" Initialized="DevelopersLevelGrid_Initialized">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" FontSize="19.5" FontFamily="calibri" Margin="0 18 0 8">Уровень доступа:</TextBlock>

                                <Grid Name="RadioButtonGrid" Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <RadioButton Name="LightDeveloperRadioButton" Grid.Row="0" Margin="4.5 4.5 4.5 6" FontSize="14" Checked="LightDeveloperRadioButton_Checked" Unchecked="LightDeveloperRadioButton_Unchecked">
                                        <TextBlock TextWrapping="Wrap">Базовый: можно просматривать расширенную информацию о некоторых категориях сотрудников (установите каких именно)</TextBlock>
                                    </RadioButton>
                                    <RadioButton Name="MediumDeveloperRadioButton" Grid.Row="2" Margin="4.5 4.5 4.5 6" FontSize="14" Unchecked="MediumDeveloperRadioButton_Unchecked">
                                        <TextBlock TextWrapping="Wrap">Средний: можно просматривать всю информацию обо всех сотрудниках и редактировать бо́льшую её часть</TextBlock>
                                    </RadioButton>
                                    <RadioButton Name="HighDeveloperRadioButton" Grid.Row="3" Margin="4.5 4.5 4.5 6" FontSize="14" Unchecked="HighDeveloperRadioButton_Unchecked">
                                        <TextBlock TextWrapping="Wrap">Высокий: можно просматривать и редактировать всю информацию о сотрудниках, а также назначать их разработчиками</TextBlock>
                                    </RadioButton>

                                    <Grid Name="DeveloperCheckBoxGrid" Grid.Row="1" Margin="13.5 0 0 10" Initialized="DeveloperCheckBoxGrid_Initialized">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <CheckBox Name="GeneralDirectorDeveloperCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="0" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Генеральный директор</TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="DirectorDeveloperCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="1" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">Директора</CheckBox>
                                        <CheckBox Name="DeputyGeneralDirectorDeveloperCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="2" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Заместители генерального директора</TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="HeadOfManagersDeveloperCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="3" Initialized="HeadOfManagersDeveloperCheckBox_Initialized" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Руководитель аппаратного офиса</TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="HeadOfExpertsDeveloperCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="4" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Руководитель отдела контроля</TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="HeadOfMarketersDeveloperCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="5" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Руководитель отдела маркетинга</TextBlock>
                                        </CheckBox>                                        
                                        <CheckBox Name="HeadOfEditorsDeveloperCheckBox"  Margin="10 3.5" FontSize="14"  Grid.Row="6" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Руководитель отдела редакции</TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="HeadOfSpecialsDeveloperCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="7" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Руководитель отдела спецпроектов</TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="HeadOfAgentsDeveloperCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="8" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Руководитель отдела поддержки</TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="HeadOfModeratorsDeveloperCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="9" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Руководитель отдела модерации</TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="HeadOfTechniciansDeveloperCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="10" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">
                                            <TextBlock TextWrapping="Wrap">Руководитель технического отдела</TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="ManagerDeveloperCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="11" Initialized="ManagerDeveloperCheckBox_Initialized" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">Менеджеры</CheckBox>
                                        <CheckBox Name="ExpertDeveloperCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="12" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">Эксперты</CheckBox>
                                        <CheckBox Name="MarketerDeveloperCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="13" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">Маркетологи</CheckBox>
                                        <CheckBox Name="EditorDeveloperCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="14" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">Редакторы</CheckBox>
                                        <CheckBox Name="SpecialDeveloperCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="15" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">Спецредакторы</CheckBox>
                                        <CheckBox Name="AgentDeveloperCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="16" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">Агенты</CheckBox>
                                        <CheckBox Name="ModeratorDeveloperCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="17" Checked="DeveloperCheckBox_Checked" Unchecked="DeveloperCheckBox_Unchecked">Модераторы</CheckBox>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1" Margin="-20 35 60 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Name="DeveloperModeGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" TextWrapping="Wrap" FontSize="19.5" FontFamily="Calibri" Margin="10.5 10 0 3.5">Укажите личную информацию о сотруднике:</TextBlock>

                        <TextBlock Grid.Row="1" FontSize="14" Margin="11.5 5 0 5">Полное имя:</TextBlock>
                        <TextBox Name="NameTextBox" Grid.Row="2" FontSize="16" FontFamily="Calibri" Padding="4 2" Margin="10 0 150 3.5" Foreground="Gray" GotFocus="NameTextBox_GotFocus" LostFocus="NameTextBox_LostFocus">Пример: Иван</TextBox>

                        <TextBlock Grid.Row="3" FontSize="14" Margin="11.5 5 0 5">Фамилия:</TextBlock>
                        <TextBox Name="SurnameTextBox" Grid.Row="4" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 3.5" Foreground="Gray" GotFocus="SurnameTextBox_GotFocus" LostFocus="SurnameTextBox_LostFocus">Пример: Иванов</TextBox>

                        <TextBlock Grid.Row="5" FontSize="14" Margin="11.5 5 0 5">Пол:</TextBlock>
                        <Grid Name="SexGrid" Grid.Row="6" Margin="10 0 0 11">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <RadioButton Name="MaleRadioButton" FontSize="14" Margin="0 0 15 0">Мужской</RadioButton>
                            <RadioButton Name="FemaleRadioButton" Grid.Column="1" FontSize="14">Женский</RadioButton>
                        </Grid>

                        <TextBlock Grid.Row="7" TextWrapping="Wrap" FontSize="19.5" FontFamily="Calibri" Margin="10.5 18 0 3.5">Придумайте данные для аккаунта сотрудника:</TextBlock>

                        <TextBlock Grid.Row="8" FontSize="14" Margin="11.5 5 0 5">Логин (рекомендуется на англ.):</TextBlock>
                        <TextBox Name="LoginTextBox" Grid.Row="9" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 3.5" Foreground="Gray" GotFocus="LoginTextBox_GotFocus" LostFocus="LoginTextBox_LostFocus">Пример: ivani</TextBox>

                        <TextBlock Name="PasswordTextBlock" Grid.Row="10" FontSize="14" Margin="11.5 5 0 5">Пароль (6 цифр):</TextBlock>
                        <TextBox Name="PasswordTextBox" Grid.Row="11" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 3.5" Foreground="Gray" GotFocus="PasswordTextBox_GotFocus">Пример: 123456</TextBox>
                        <PasswordBox Name="MainPasswordBox" Grid.Row="11" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 3.5" LostFocus="MainPasswordBox_LostFocus" Visibility="Hidden"></PasswordBox>

                        <TextBlock Name="RepeatPasswordTextBlock" Grid.Row="12" FontSize="14" Margin="11.5 5 0 5">Подтвердите пароль:</TextBlock>
                        <TextBox Name="RepeatPasswordTextBox" Grid.Row="13" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 3.5" Foreground="Gray" GotFocus="RepeatPasswordTextBox_GotFocus">Пример: 123456</TextBox>
                        <PasswordBox Name="RepeatPasswordBox" Grid.Row="13" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 3.5" LostFocus="RepeatPasswordBox_LostFocus" Visibility="Hidden"></PasswordBox>

                        <Button Name="PasswordButton" Grid.Row="14" HorizontalAlignment="Left" Padding="6.3 4.5" FontSize="13" Margin="10 8.5 150 13" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="PasswordButton_Click">Старый пароль</Button>

                        <TextBlock Grid.Row="15" TextWrapping="Wrap" FontSize="19.5" FontFamily="Calibri" Margin="10.5 18 0 5">Оформите историю работы сотрудника:</TextBlock>

                        <CheckBox Grid.Row="16" Name="StillWorkingCheckBox" Margin="20 3.5 20 6" FontSize="14" IsChecked="True" Checked="StillWorkingCheckBox_Checked" Unchecked="StillWorkingCheckBox_Unchecked">Сейчас сотрудник работает</CheckBox>

                        <TextBlock Grid.Row="17" FontSize="14" Margin="11.5 5 0 5" TextWrapping="Wrap">Дата начала работы (ДД.ММ.ГГГГ):</TextBlock>
                        <TextBox Name="StartWorkingDateTextBox" Grid.Row="18" FontSize="16" FontFamily="Calibri" Padding="4 2" Margin="10 0 150 3.5" Foreground="Gray" GotFocus="StartWorkingDateTextBox_GotFocus" LostFocus="StartWorkingDateTextBox_LostFocus">Пример: 18.08.2018</TextBox>
                        <Button Name="Today1Button" Grid.Row="19" HorizontalAlignment="Left" Padding="6.3 4.5" FontSize="13" Margin="10 8.5 150 5" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Click="Today1Button_Click">Сегодня</Button>

                        <TextBlock Name="EndWorkingDateTextBlock" Grid.Row="20" FontSize="14" Margin="11.5 5 0 5" TextWrapping="Wrap" Initialized="EndWorkingDateTextBlock_Initialized">Дата окончания работы (ДД.ММ.ГГГГ):</TextBlock>
                        <TextBox Name="EndWorkingDateTextBox" Grid.Row="21" FontSize="16" FontFamily="Calibri" Padding="4 2" Margin="10 0 150 3.5" Foreground="Gray" Initialized="EndWorkingDateTextBox_Initialized" GotFocus="EndWorkingDateTextBox_GotFocus" LostFocus="EndWorkingDateTextBox_LostFocus">Пример: 01.09.2018</TextBox>
                        <Button Name="Today2Button" Grid.Row="22" HorizontalAlignment="Left" Padding="6.3 4.5" FontSize="13" Margin="10 8.5 150 13" Style="{DynamicResource AttentionButtonsStyle}" VerticalAlignment="Top" Initialized="Today2Button_Initialized" Click="Today2Button_Click">Сегодня</Button>


                        <TextBlock Grid.Row="23" TextWrapping="Wrap" FontSize="19.5" FontFamily="Calibri" Margin="10.5 18 0 10">Отметьте все должности сотрудника:</TextBlock>
                        <Grid Name="CheckBoxGrid" Grid.Row="24" Margin="10 0 0 11">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <CheckBox Name="GeneralDirectorCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="0">Генеральный директор</CheckBox>
                            <CheckBox Name="DirectorCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="1" Checked="DirectorCheckBox_Checked" Unchecked="DirectorCheckBox_Unchecked">Директор</CheckBox>
                            <CheckBox Name="DeputyGeneralDirectorCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="2">Заместитель генерального директора</CheckBox>
                            <CheckBox Name="HeadOfManagersCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="3" Initialized="HeadOfManagersCheckBox_Initialized">Руководитель аппаратного офиса</CheckBox>
                            <CheckBox Name="HeadOfExpertsCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="4">Руководитель отдела контроля</CheckBox>
                            <CheckBox Name="HeadOfMarketersCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="5">Руководитель отдела маркетинга</CheckBox>
                            <CheckBox Name="HeadOfEditorsCheckBox"  Margin="10 3.5" FontSize="14"  Grid.Row="6">Руководитель отдела редакции</CheckBox>
                            <CheckBox Name="HeadOfSpecialsCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="7">Руководитель отдела спецпроектов</CheckBox>
                            <CheckBox Name="HeadOfAgentsCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="8">Руководитель отдела поддержки</CheckBox>
                            <CheckBox Name="HeadOfModeratorsCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="9">Руководитель отдела модерации</CheckBox>
                            <CheckBox Name="HeadOfTechniciansCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="10">Руководитель технического отдела</CheckBox>
                            <CheckBox Name="ManagerCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="11" Initialized="ManagerCheckBox_Initialized" Checked="ManagerCheckBox_Checked" Unchecked="ManagerCheckBox_Unchecked">Менеджер</CheckBox>
                            <CheckBox Name="ExpertCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="12">Эксперт</CheckBox>
                            <CheckBox Name="MarketerCheckBox" Margin="10 3.5" FontSize="14"  Grid.Row="13">Маркетолог</CheckBox>
                            <CheckBox Name="EditorCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="14" Checked="EditorCheckBox_Checked" Unchecked="EditorCheckBox_Unchecked">Редактор</CheckBox>
                            <CheckBox Name="SpecialCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="15" Checked="SpecialСheckBox_Checked" Unchecked="SpecialСheckBox_Unchecked">Спецредактор</CheckBox>
                            <CheckBox Name="AgentCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="16" Checked="AgentCheckBox_Checked" Unchecked="AgentCheckBox_Unchecked">Агент</CheckBox>
                            <CheckBox Name="ModeratorCheckBox" Margin="10 3.5" FontSize="14" Grid.Row="17">Модератор</CheckBox>
                        </Grid>

                        <Grid Name="DirectorsRoleGrid" Grid.Row="25" Initialized="DirectorsRoleGrid_Initialized">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" TextWrapping="Wrap" FontSize="19.5" FontFamily="Calibri" Margin="11.2 18 0 3.5">Директорская должность:</TextBlock>

                            <TextBlock Grid.Row="1" FontSize="14" Margin="11.5 5 0 5" TextWrapping="Wrap">Полное название должности:</TextBlock>
                            <TextBox Name="DirectorsPositionTextBox" Grid.Row="2" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 11" Foreground="Gray" GotFocus="DirectorsPositionTextBox_GotFocus" LostFocus="DirectorsPositionTextBox_LostFocus">Пример: Директор по связям</TextBox>
                        </Grid>
                        
                        <Grid Name="ManagersRoleGrid" Grid.Row="26" Initialized="ManagersRoleGrid_Initialized">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" TextWrapping="Wrap" FontSize="19.5" FontFamily="Calibri" Margin="10.5 18 0 3.5">Менеджерская должность:</TextBlock>

                            <TextBlock Grid.Row="1" FontSize="14" Margin="11.5 5 0 5" TextWrapping="Wrap">Развёрнутое название должности (при наличии нескольких перечислять через ";"):</TextBlock>
                            <TextBox Name="ManagersPositionTextBox" Grid.Row="2" FontSize="16" FontFamily="calibri" Padding="4 2" Margin="10 0 150 11" Foreground="Gray" GotFocus="ManagersPositionTextBox_GotFocus" LostFocus="ManagersPositionTextBox_LostFocus">Пример: Менеджер по кадрам</TextBox>
                        </Grid>

                        <Grid Name="EditorsRoleGrid" Grid.Row="27" Initialized="EditorsRoleGrid_Initialized">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" TextWrapping="Wrap" FontSize="19.5" FontFamily="Calibri" Margin="10.5 18 0 3.5">Редакторская должность:</TextBlock>

                            <ListBox Name="EditorsInformationListBox" Grid.Row="1" Background="Transparent" BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Style="{DynamicResource TransparentListBox}" PreviewMouseWheel="ListBox_PreviewMouseWheel">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" FontSize="14" Margin="5.8 1.55 0 5" TextWrapping="Wrap">Рубрика. Частота размещения (раз во сколько дней должен публиковаться пост):</TextBlock>

                                            <Grid Margin="4.3 0 143 3.5" Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>

                                                <ComboBox Name="EditorsRubricComboBox" Grid.Column="0" FontSize="16" FontFamily="Calibri" Padding="4 2" Margin="0 0 -10 0" DisplayMemberPath="Name" Initialized="EditorsRubricComboBox_Initialized" DropDownOpened="EditorsRubricComboBox_DropDownOpened" DropDownClosed="EditorsRubricComboBox_DropDownClosed" SelectionChanged="EditorsRubricComboBox_SelectionChanged"></ComboBox>
                                                <TextBox Name="EditorsFrequencyTextBox" Grid.Column="1" FontSize="16" Margin="30 0 0 0" FontFamily="calibri" Padding="4 2" Foreground="Gray" Initialized="EditorsFrequencyTextBox_Initialized" GotFocus="EditorsFrequencyTextBox_GotFocus" LostFocus="EditorsFrequencyTextBox_LostFocus">Пример: 3</TextBox>
